{
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependencies"
  ],
  "prHourlyLimit": 1,
  "prConcurrentLimit": 2,
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ManagerX â€“ Dependency Updates",
  "automerge": false,
  "rangeStrategy": "pin",
  "timezone": "Europe/Berlin",
  "npm": {
    "npmrc": "legacy-peer-deps=true"
  },
  "pip_requirements": {
    "fileMatch": [
      "(^|/)requirements\\.txt$",
      "^requirements/.*\\.txt$"
    ]
  },
  "packageRules": [
    {
      "matchManagers": [
        "npm"
      ],
      "groupName": "Node.js Updates",
      "description": "Fasst alle Node.js/NPM Updates inklusive Peer-Dep-Fix zusammen"
    },
    {
      "matchManagers": [
        "pip_requirements",
        "pipenv",
        "poetry"
      ],
      "groupName": "Python Updates",
      "description": "Fasst alle Python-Updates aus Root und Unterordnern zusammen"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions Updates"
    }
  ]
}